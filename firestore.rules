rules_version = '2';

service cloud.firestore {
    match /databases/{database}/documents {
      match /users/{userId} {
      // 自分のデータのみ操作可能に
      allow read, update, delete: if request.auth != null && request.auth.uid == userId;
      // サイインインの認証
      allow create: if request.auth != null;
      }
    }
}

